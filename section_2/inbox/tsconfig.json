{
    "compilerOptions": {
        "outDir": "./dist/",
        "mapRoot": "./dist/",
        "sourceMap": true,
        "lib": ["es5"],
        "module": "CommonJS",
        "target": "ES2018",
        "strict": true,
        "esModuleInterop": true,
        "types": ["@types/node", "@types/mocha"],
        "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "build", "cache", "artifacts"]
  }